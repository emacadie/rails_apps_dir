<h1>Listing apartments</h1>

<table>
  <tr>
    <th>Address 1</th>
    <th>Address 2</th>
    <th>City</th>
    <th>Zip</th>
    <th>Landlord</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @apartments.each do |apartment| %>
  <tr>
    <td><%= apartment.address_1 %></td>
    <td><%= apartment.address_2 %></td>
    <td><%= apartment.city %></td>
    <td><%= apartment.zip %></td>
    <td><%= apartment.landlord.first_name + " " + apartment.landlord.second_name %></td>
    <td><%= link_to 'Show', apartment %></td>
    <td><%= link_to 'Edit', edit_apartment_path(apartment) %></td>
    <td><%= link_to 'Destroy', apartment, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

