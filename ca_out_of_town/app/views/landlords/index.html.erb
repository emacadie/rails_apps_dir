  <tr>
    <td><%= landlord.first_name %></td>
    <td><%= landlord.second_name %></td>
    <td><%= landlord.email %></td>
    <td><%= landlord.phone %></td>
    
    <td><%= landlord.note %></td>
    <td><%= link_to 'Show', landlord %></td>
