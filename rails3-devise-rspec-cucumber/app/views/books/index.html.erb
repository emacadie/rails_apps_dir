<h1>Listing books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Review</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.review %></td>
    <td><%= book.user.name %></td>
    <td><%= link_to 'Show', book %></td>
<% if user_signed_in? %>
    <td> <%= link_to 'Edit', edit_book_path(book) %> </td>
    <td> <%= link_to 'Destroy', book, confirm: 'Are you sure?', method: :delete %> </td>
<% end %>
  </tr>
<% end %>
</table>

<br />
<% if user_signed_in? %>
<%= link_to 'New Book', new_book_path %>
<% end %>
